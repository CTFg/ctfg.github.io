---
export interface Props {
  id: string;
  title: string;
}

const { title, id } = Astro.props;
let space_class ="flex scroll-mt-24 flex-col items-center gap-4 space-y-"
if (id === "faq") {
  space_class = space_class + "0";
} else {
  space_class = space_class + "4";
}
---

<section
  id={id}
  class={space_class}
>
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2
      class="gradient-text text-center font-extrabold tracking-tight text-6xl"
    >
      {title}
    </h2>
  </div>
  <p class="max-w-xl text-center font-extrabold text-2xl">
    <slot name="lead" />
  </p>
  <slot />
</section>
