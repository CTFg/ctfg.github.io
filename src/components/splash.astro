---
import { Picture } from "@astrojs/image/components";
import hackersImage from "~/assets/hackers.jpeg";
import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section id="splash" class="relative h-full bg-black">
  <Starfield />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div class="relative grid h-full place-items-center gap-12 sm:grid-cols-2">
    <h2
      class="flex flex-col gap-4 self-end sm:gap-2 sm:self-auto sm:justify-self-end"
    >
      <div
        class="gradient-text text-center font-extrabold tracking-tighter text-8xl"
      >
        Not your<br />
        average <br />
        CTF <br />
      </div>
    </h2>
    <div
      class="w-0 max-w-3xl min-w-[2/3] self-start sm:w-10/12 sm:self-auto sm:justify-self-start"
    >
      <Picture
        class="object-cover m-auto w-3/4 h-full rounded-2xl"
        src={hackersImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="People at MCPS HSF"
      />
    </div>
  </div>
  <div class="absolute right-1/2 -translate-x-[-50%] bottom-[15vh]"></div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @media (prefers-reduced-motion: reduce) {
    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
