---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "#",
    description: "This website",
    icon: "mdi:home",
  },
  {
    url: "https://github.com/CTFg/",
    description: "Our projects",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://discord.gg/bzRjJSFndW",
    description: "Discord",
    icon: "fa-brands:discord",
  }
];
---

<footer class="relative flex overflow-hidden h-50 sm:h-64 items-center justify-center">
  <div class="absolute top-0 opacity-60">
    <HeroImage />
  </div>
  <div class="relative grid grid-rows-2 grid-cols-1 gap-2 sm:gap-4 mt-8 sm:mt-16">
  <ul class="flex flex-row items-center justify-center">
    {
      links.map((link) => (
        <li>
          <a
            class="flex mx-2 h-14 w-14 sm:h-16 sm:w-16 hover:text-primary hover:border-primary rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
  <p id="foot" class="text-center text-default w-[75%] translate-x-[17%]">MCPS HSF is fiscally sponsored by Hack Club Bank, a project by The Hack Foundation (d.b.a. Hack Club), a 501(c)(3) nonprofit (EIN: 81-2908499).</p>
  </div>
  <style>
    #foot {
      font-size: x-small;
    }
    @media (min-width: 640px) {
      #foot {
        font-size: medium;
      }
    }
  </style>
</footer>
