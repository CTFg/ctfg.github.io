---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "#",
    description: "This website",
    icon: "mdi:home",
  },
  {
    url: "https://github.com/CTFg/",
    description: "Our projects",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://discord.gg/bzRjJSFndW",
    description: "Discord",
    icon: "fa-brands:discord",
  }
];
---

<footer class="relative flex overflow-hidden h-40 sm:h-64 items-center justify-center">
  <div class="absolute top-0 opacity-60">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-3 gap-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-14 w-14 sm:h-16 sm:w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
