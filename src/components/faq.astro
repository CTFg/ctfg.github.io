---
import ContentSection from "~/components/content-section.astro";
import type { FAQItem } from "~/types";

const features: Array<FAQItem> = [
  {
    question: "What is an HSF?",
    answer:
      "An HSF is a flavor of a CTF. The challenges are connected to a theme, and the goal is not to get the most flags, but to create the most convincing writeup."
  },
  {
    question: "Do I need experience?",
    answer:
      "No! This competition has a variety of challenges for all skill levels. Also, winners are determined by the writeup, not the number of flags."
  },
  {
    question: "What are the divisions?",
    answer:
      "The competition is divided into a novice and advanced division. The novice division is for beginners, and the advanced division is for more experienced hackers."
  },
  {
    question: "What is the theme?",
    answer:
      "It varies from year to year, but we've had competitions based on murder mysteries, kidnappings, and more."
  },
  {
    question: "Are there prizes?",
    answer: "Yes! We had drones and GoPros last year. The top three in both the novice and advanced division win prizes."
  },
  {
    question: "I have more questions!",
    answer:
      "Join our Discord server below and ask away! We'll be happy to answer any questions you have."
  }
];
---

<ContentSection title="FAQ" id="faq">
  <Fragment slot="lead">
    <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3 md:gap-4 lg:gap-4">
      {
        features.map(({ question, answer }) => (
          <li class="flex flex-col items-center gap-2 border border-primary p-4 md:rounded-lg lg:rounded-lg">
            <p class="text-center font-extrabold text-xl">{question}</p>
            <p class="text-center text-offset text-sm">{answer}</p>
          </li>
        ))
      }
    </ul>
  </Fragment>
</ContentSection>
